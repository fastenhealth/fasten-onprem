{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "comma-dangle": [ 2, "never" ],
    "no-cond-assign": [ 2, "except-parens" ],
    "no-constant-condition": 1,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    /*"no-extra-parens": 2,*/
    "no-extra-semi": 2,
    "no-func-assign": 2,
    // "no-inner-declarations" not sure
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "no-unexpected-multiline": 2,




    "accessor-pairs": 2,
    "block-scoped-var": 2,
    "consistent-return": 0,
    "curly": [ 2, "multi-line" ], // open for discussion
    "dot-notation": 0,
    "dot-location": [ 2, "property" ],
    # "eqeqeq": 2,
    "guard-for-in": 1,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 2,
    "no-else-return": 1,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 1,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": [ 2, "except-parens" ],
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-warning-comments": 1,
    "no-with": 2,
    "radix": 2,
    "wrap-iife": 2,
    "yoda": 2,

    // variables
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,

    // node
    "callback-return": 0,
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,

    // style
    "array-bracket-spacing": [ 2, "always" ],
    "block-spacing": [ 2, "always" ],
    "brace-style": [ 2, "1tbs" ],
    "camelcase": 0,
    "comma-spacing": [ 2, { before: false, after: true } ],
    "comma-style": [ 2, "last" ],
    "computed-property-spacing": [ 2, "never" ],
    "consistent-this": [ 2, "self" ],
    "eol-last": 2,
    "indent": [ 2, 2 ],
    "key-spacing": [ 2, { beforeColon: false, afterColon: true } ],
    // "lines-around-comment", // er
    "linebreak-style": [ 2, "unix" ],
    // "max-nested-callbacks": [ 2, 3 ], // lols
    "new-cap": 2,
    "new-parens": 2,
    // "newline-after-var": 1,
    "no-array-constructor": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    // "no-underscore-dangle": 2,
    "no-unneeded-ternary": 2,
    "object-curly-spacing": [ 2, "always" ],
    "operator-assignment": 1,
    // "operator-linebreak": [ ] // um not sure
    "padded-blocks": [ 2, "never" ],
    "quotes": [ 2, "single", "avoid-escape" ],
    "semi-spacing": 2,
    "semi": 2,
    "keyword-spacing": 2,
    "space-before-blocks": 2, // ugh if + function stuff
    "space-before-function-paren": [ 2, "never" ],
    "space-in-parens": [ 2, "never" ],
    "space-infix-ops": [ 2, { int32Hint: true } ],
    "space-unary-ops": [ 2, { words: true, nonwords: false } ]
  }
}
